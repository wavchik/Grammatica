@using PagedList;
@using PagedList.Mvc;
@model IEnumerable<KakPishetsya.Common.Data.Models.UnregSearchWord>

@{
    ViewBag.Title = "Незарегестрированные поисковые слова";
    ViewBag.PageName = "Незарегестрированные поисковые слова";
}

<div class="header">
    <h1>@ViewBag.PageName</h1>
</div>
<ul class="breadcrumb">
    <li>@Html.ActionLink("Администрирование", "Index", "Administration") <span class="divider">/</span> </li>
    <li class="active">@ViewBag.PageName</li>
</ul>

<table>
    <tr>
        <th style="min-width:300px">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="min-width:300px">
            @Html.DisplayNameFor(model => model.SearchCount)
        </th>
        <th></th>
    </tr>

@foreach (KakPishetsya.Common.Data.Models.UnregSearchWord item in ViewBag.OnePageOfWords)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SearchCount)
        </td>
        <td>
            @Html.ActionLink("Создать слово", "Create", "Words", new { offerName = item.Name }, null) |
            @Ajax.ActionLink("Удалить", "Delete", new { id = item.Id }, new AjaxOptions { HttpMethod = "POST" }, new { onclick = "return confirm('Вы действительно хотите удалить слово?')" })
        </td>
    </tr>
}

</table>

<!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
@Html.PagedListPager((IPagedList)ViewBag.OnePageOfWords, page => Url.Action("Index", new { page }))