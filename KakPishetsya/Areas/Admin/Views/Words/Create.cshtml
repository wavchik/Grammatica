@model KakPishetsya.Common.Data.Models.Word

@{
    ViewBag.Title = "Создание слова/фразы";
    ViewBag.PageName = "Создание слова/фразы";
}

<div class="header">
    <h1>@ViewBag.PageName</h1>
</div>
<ul class="breadcrumb">
    <li>@Html.ActionLink("Администрирование", "Index", "Administration") <span class="divider">/</span> </li>
    @if (string.IsNullOrEmpty(Request.Params["offerName"]))
    {
        <li>@Html.ActionLink("Слова", "Index", "Words") <span class="divider">/</span> </li>
        <li class="active">@ViewBag.PageName</li>
    }
    else
    {
        <li>@Html.ActionLink("Предложенные слова", "Index", "OfferWords") </li>
    }
</ul>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Слово/ Фраза</legend>

        @Html.Partial("_CreateOrEdit", Model)

        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Обратно к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
