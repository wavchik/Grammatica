@model IEnumerable<KakPishetsya.Common.Data.Models.Feedback>

@{
    ViewBag.Title = "Отзывы";
    ViewBag.PageName = "Отзывы";
}

<div class="header">
    <h1>@ViewBag.PageName</h1>
</div>
<ul class="breadcrumb">
    <li>@Html.ActionLink("Администрирование", "Index", "Administration") <span class="divider">/</span> </li>
    <li class="active">@ViewBag.PageName</li>
</ul>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="word-wrap: break-word; width: 270px;">
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a href="mailto:@item.Email?subject=Re:Отзыв&body=Здравствуй, @item.Name%0A%0aСпасибо за ваш отзыв."><b>@item.Email</b></a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Ajax.ActionLink("Удалить", "Delete", new { id = item.Id }, new AjaxOptions { HttpMethod = "POST" }, new { onclick = "return confirm('Вы действительно хотите удалить данный отзыв?')"})
        </td>
    </tr>
}

</table>
